{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@typings/*": ["src/typings/*"],
			"@styles/*": ["src/styles/*"],

			"@components": ["src/components"],
			"@components/player": ["src/components/Player"],
			"@lib": ["src/lib"],
			"@utils": ["src/utils"],
			"@hooks": ["src/utils/hooks"],

			"@seo-default": ["src/next-seo.config"],
			"@stats": ["src/stats.ts"]
		},
		"outDir": "./dist",
		"target": "ES5",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"incremental": true,
		"lib": ["ES2019.Array", "DOM"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
